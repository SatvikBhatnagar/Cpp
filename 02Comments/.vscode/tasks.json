{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with g++ 13.2.1",
			"command": "/bin/bash",
			"args": [
				"-c",
				"/usr/bin/g++ -fdiagnostics-color=always -g -std=c++20 ${workspaceFolder}/*.cpp -o ${workspaceFolder}/rooster"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Build with clang++ 16.0.6",
			"command": "/bin/bash",
			"args": [
				"-c",
				"/usr/bin/clang++ -fcolor-diagnostics -fansi-escape-codes -g -std=c++20 ${workspaceFolder}/*.cpp -o ${workspaceFolder}/rooster"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}